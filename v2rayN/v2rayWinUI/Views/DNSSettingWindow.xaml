<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="v2rayWinUI.Views.DNSSettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DNS Settings"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            FontWeight="SemiBold"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="DNS Settings" />

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="16">
                <Expander Header="DNS Configuration" IsExpanded="True">
                    <StackPanel Padding="12" Spacing="12">
                        <CheckBox x:Name="chkUseSystemHosts" Content="Use System Hosts" />

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Normal DNS" />
                            <TextBox
                                x:Name="txtNormalDNS"
                                PlaceholderText="e.g., https://1.1.1.1/dns-query"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Tunnel DNS" />
                            <TextBox
                                x:Name="txtTunnelDNS"
                                PlaceholderText="e.g., https://8.8.8.8/dns-query"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Padding="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="12">
            <Button
                x:Name="btnCancel"
                MinWidth="100"
                Content="Cancel"
                Style="{StaticResource DefButton}" />
            <Button
                x:Name="btnSave"
                MinWidth="100"
                Content="Save"
                Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
