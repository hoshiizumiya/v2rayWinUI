<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="v2rayWinUI.Views.AddServerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:v2rayWinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Server"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,20"
            Spacing="8">
            <TextBlock
                FontWeight="SemiBold"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Add Server" />
            <TextBlock
                x:Name="txtServerType"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="VMess Server Configuration" />
        </StackPanel>

        <!--  Content  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <!--  Basic Settings  -->
                <Expander Header="Basic Settings" IsExpanded="True">
                    <StackPanel Padding="12" Spacing="12">
                        <!--  Remarks  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Remarks *" />
                            <TextBox
                                x:Name="txtRemarks"
                                PlaceholderText="Server name or description"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <!--  Address  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Address *" />
                            <TextBox
                                x:Name="txtAddress"
                                PlaceholderText="example.com or IP address"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <!--  Port  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Port *" />
                            <TextBox
                                x:Name="txtPort"
                                InputScope="Number"
                                PlaceholderText="1-65535"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <!--  User ID  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="User ID *" />
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox
                                    x:Name="txtId"
                                    Grid.Column="0"
                                    PlaceholderText="UUID or password"
                                    Style="{StaticResource DefTextBox}" />
                                <Button
                                    x:Name="btnGenerateId"
                                    Grid.Column="1"
                                    Content="Generate"
                                    Style="{StaticResource DefButton}" />
                            </Grid>
                        </StackPanel>

                        <!--  Alter ID (for VMess)  -->
                        <StackPanel x:Name="panelAlterId" Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Alter ID" />
                            <TextBox
                                x:Name="txtAlterId"
                                InputScope="Number"
                                Style="{StaticResource DefTextBox}"
                                Text="0" />
                        </StackPanel>

                        <!--  Security/Encryption  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Security" />
                            <ComboBox
                                x:Name="cmbSecurity"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DefComboBox}" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!--  Transport Settings  -->
                <Expander Header="Transport Settings">
                    <StackPanel Padding="12" Spacing="12">
                        <!--  Network  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Network" />
                            <ComboBox
                                x:Name="cmbNetwork"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DefComboBox}" />
                        </StackPanel>

                        <!--  Header Type  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Header Type" />
                            <ComboBox
                                x:Name="cmbHeaderType"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DefComboBox}" />
                        </StackPanel>

                        <!--  Request Host  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Request Host / SNI" />
                            <TextBox
                                x:Name="txtRequestHost"
                                PlaceholderText="example.com"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <!--  Path  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Path" />
                            <TextBox
                                x:Name="txtPath"
                                PlaceholderText="/path"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!--  TLS Settings  -->
                <Expander Header="TLS Settings">
                    <StackPanel Padding="12" Spacing="12">
                        <!--  Stream Security  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Stream Security" />
                            <ComboBox
                                x:Name="cmbStreamSecurity"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DefComboBox}" />
                        </StackPanel>

                        <!--  ALPN  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="ALPN" />
                            <TextBox
                                x:Name="txtAlpn"
                                PlaceholderText="h2,http/1.1"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <!--  Fingerprint  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Fingerprint" />
                            <ComboBox
                                x:Name="cmbFingerprint"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DefComboBox}" />
                        </StackPanel>

                        <!--  Allow Insecure  -->
                        <CheckBox
                            x:Name="chkAllowInsecure"
                            Margin="0,8,0,0"
                            Content="Allow Insecure (Skip TLS verification)" />
                    </StackPanel>
                </Expander>

                <!--  Advanced Settings  -->
                <Expander Header="Advanced Settings">
                    <StackPanel Padding="12" Spacing="12">
                        <!--  Flow  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Flow" />
                            <ComboBox
                                x:Name="cmbFlow"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DefComboBox}" />
                        </StackPanel>

                        <!--  Subscription  -->
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Subscription Group" />
                            <ComboBox
                                x:Name="cmbSubid"
                                HorizontalAlignment="Stretch"
                                DisplayMemberPath="Remarks"
                                Style="{StaticResource DefComboBox}" />
                        </StackPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!--  Footer  -->
        <Grid
            Grid.Row="2"
            Padding="0,20,0,0"
            ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    x:Name="btnImportUrl"
                    Content="Import from URL"
                    Style="{StaticResource DefButton}" />
                <Button
                    x:Name="btnTestServer"
                    Content="Test Connection"
                    Style="{StaticResource DefButton}" />
            </StackPanel>

            <Button
                x:Name="btnCancel"
                Grid.Column="1"
                MinWidth="100"
                Content="Cancel"
                Style="{StaticResource DefButton}" />
            <Button
                x:Name="btnSave"
                Grid.Column="2"
                MinWidth="100"
                Content="Save"
                Style="{StaticResource AccentButtonStyle}" />
        </Grid>
    </Grid>
</Window>
