<?xml version="1.0" encoding="utf-8"?>
<base:ModernDialogWindow
    x:Class="v2rayWinUI.Views.RoutingSettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:v2rayWinUI.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Routing Settings"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*">
        <!--  Custom Title Bar  -->
        <Grid
            x:Name="TitleBarArea"
            Grid.Row="0"
            Height="40"
            Background="Transparent"/>

        <!--  Content Area  -->
        <Grid Grid.Row="1"
                Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                    Text="Routing Settings"
                       Style="{StaticResource TitleTextBlockStyle}"
                       FontWeight="SemiBold"
                    Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1">
                <StackPanel Spacing="16">
                    <Expander Header="Routing Rules"
                            IsExpanded="True">
                        <StackPanel Spacing="12"
                                Padding="12">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Domain Strategy"
                                        FontWeight="SemiBold"/>
                                <ComboBox x:Name="cmbDomainStrategy"
                                        HorizontalAlignment="Stretch"
                                        Style="{StaticResource DefComboBox}"/>
                            </StackPanel>

                            <StackPanel Spacing="4">
                                <TextBlock Text="Domain Matcher"
                                        FontWeight="SemiBold"/>
                                <ComboBox x:Name="cmbDomainMatcher"
                                        HorizontalAlignment="Stretch"
                                        Style="{StaticResource DefComboBox}"/>
                            </StackPanel>

                            <CheckBox x:Name="chkEnableRoutingAdvanced"
                                    Content="Enable Advanced Routing"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                        Spacing="12"
                    Padding="0,20,0,0">
                <Button x:Name="btnCancel"
                        Content="Cancel"
                        MinWidth="100"
                        Style="{StaticResource DefButton}"/>
                <Button x:Name="btnSave"
                        Content="Save"
                        MinWidth="100"
                        Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</base:ModernDialogWindow>
