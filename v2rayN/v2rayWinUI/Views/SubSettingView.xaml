<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="v2rayWinUI.Views.SubSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:v2rayWinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="12" ColumnSpacing="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left list  -->
        <controls:TitleCard
            x:Uid="v2rayWinUI.Subscriptions.List"
            Title="Subscriptions"
            Grid.Column="0">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        x:Name="SubSettingViewAddButton"
                        x:Uid="v2rayWinUI.Subscriptions.AddButton"
                        MinWidth="0"
                        Command="{Binding AddCommand}"
                        Style="{StaticResource DefButton}"
                        ToolTipService.ToolTip="Add">
                        <FontIcon Glyph="&#xE710;" />
                    </Button>
                    <Button
                        x:Name="SubSettingViewEditButton"
                        x:Uid="v2rayWinUI.Subscriptions.EditButton"
                        MinWidth="0"
                        Command="{Binding EditCommand}"
                        IsEnabled="{Binding CanEditRemove}"
                        Style="{StaticResource DefButton}"
                        ToolTipService.ToolTip="Edit">
                        <FontIcon Glyph="&#xE70F;" />
                    </Button>
                    <Button
                        x:Name="SubSettingViewDeleteButton"
                        x:Uid="v2rayWinUI.Subscriptions.DeleteButton"
                        MinWidth="0"
                        Command="{Binding DeleteCommand}"
                        IsEnabled="{Binding CanEditRemove}"
                        Style="{StaticResource DefButton}"
                        ToolTipService.ToolTip="Delete">
                        <FontIcon Glyph="&#xE74D;" />
                    </Button>
                </StackPanel>

                <ListView
                    x:Name="SubSettingViewList"
                    Grid.Row="1"
                    SelectionMode="Extended">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Padding="8,6">
                                <TextBlock FontWeight="SemiBold" Text="{Binding Remarks}" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="{Binding Url}"
                                    TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </controls:TitleCard>

        <!--  Right editor (read-only, advanced fields displayed)  -->
        <controls:TitleCard
            x:Uid="v2rayWinUI.Subscriptions.Details"
            Title="Details"
            Grid.Column="1">
            <ScrollViewer>
                <StackPanel Spacing="12">
                    <InfoBar
                        x:Uid="v2rayWinUI.Subscriptions.Tip"
                        Title="Tip"
                        IsClosable="False"
                        IsOpen="True"
                        Message="Select an item, then click Edit to modify."
                        Severity="Informational" />

                    <TextBox
                        x:Uid="v2rayWinUI.Subscriptions.Field.Name"
                        Header="Name"
                        IsReadOnly="True"
                        Style="{StaticResource DefTextBox}"
                        Text="{x:Bind ServiceViewModel.SelectedSource.Remarks, Mode=OneWay}" />
                    <TextBox
                        x:Uid="v2rayWinUI.Subscriptions.Field.Url"
                        Header="URL"
                        IsReadOnly="True"
                        Style="{StaticResource DefTextBox}"
                        Text="{x:Bind ServiceViewModel.SelectedSource.Url, Mode=OneWay}"
                        TextWrapping="Wrap" />
                    <TextBox
                        x:Uid="v2rayWinUI.Subscriptions.Field.MoreUrl"
                        Header="More URL"
                        IsReadOnly="True"
                        Style="{StaticResource DefTextBox}"
                        Text="{x:Bind ServiceViewModel.SelectedSource.MoreUrl, Mode=OneWay}"
                        TextWrapping="Wrap" />

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <CheckBox
                            x:Uid="v2rayWinUI.Subscriptions.Field.Enabled"
                            Content="Enabled"
                            IsChecked="{x:Bind ServiceViewModel.SelectedSource.Enabled, Mode=OneWay}"
                            IsEnabled="False" />
                        <TextBlock
                            x:Uid="v2rayWinUI.Subscriptions.Field.AutoUpdate"
                            VerticalAlignment="Center"
                            Text="Auto update (min)" />
                        <TextBox
                            x:Uid="v2rayWinUI.Subscriptions.Field.AutoUpdateValue"
                            Width="120"
                            IsReadOnly="True"
                            Text="{x:Bind ServiceViewModel.SelectedSource.AutoUpdateInterval, Mode=OneWay}" />
                    </StackPanel>

                    <TextBox
                        x:Uid="v2rayWinUI.Subscriptions.Field.UserAgent"
                        Header="User-Agent"
                        IsReadOnly="True"
                        Style="{StaticResource DefTextBox}"
                        Text="{x:Bind ServiceViewModel.SelectedSource.UserAgent, Mode=OneWay}" />
                    <TextBox
                        x:Uid="v2rayWinUI.Subscriptions.Field.Filter"
                        Header="Filter"
                        IsReadOnly="True"
                        Style="{StaticResource DefTextBox}"
                        Text="{x:Bind ServiceViewModel.SelectedSource.Filter, Mode=OneWay}"
                        TextWrapping="Wrap" />
                    <TextBox
                        x:Uid="v2rayWinUI.Subscriptions.Field.ConvertTarget"
                        Header="Convert Target"
                        IsReadOnly="True"
                        Style="{StaticResource DefTextBox}"
                        Text="{x:Bind ServiceViewModel.SelectedSource.ConvertTarget, Mode=OneWay}" />
                    <TextBox
                        x:Uid="v2rayWinUI.Subscriptions.Field.Memo"
                        Header="Memo"
                        IsReadOnly="True"
                        Style="{StaticResource DefTextBox}"
                        Text="{x:Bind ServiceViewModel.SelectedSource.Memo, Mode=OneWay}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </ScrollViewer>
        </controls:TitleCard>
    </Grid>
</Page>
