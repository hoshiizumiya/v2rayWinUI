<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="v2rayWinUI.Views.Settings.SettingsPages.FullConfigTemplateSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:v2rayWinUI.Controls"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="12" Spacing="12">
            <controls:TitleCard Title="Full Config Template">
                <StackPanel Spacing="12">
                    <TextBlock
                        x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Desc"
                        Text="Configure full JSON templates for Xray and sing-box."
                        TextWrapping="Wrap" />

                    <TabView>
                        <TabViewItem Header="Xray">
                            <StackPanel Spacing="12">
                                <ToggleSwitch
                                    x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Xray.Enable"
                                    x:Name="FullConfigTemplateSettingsPageXrayEnableToggle"
                                    Header="Enable template"
                                    MinWidth="0" />

                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <ToggleSwitch
                                        x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Xray.AddProxyOnly"
                                        x:Name="FullConfigTemplateSettingsPageXrayAddProxyOnlyToggle"
                                        Header="Add proxy protocol outbound only"
                                        MinWidth="0" />
                                    <TextBox
                                        x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Xray.ProxyDetour"
                                        x:Name="FullConfigTemplateSettingsPageXrayProxyDetourTextBox"
                                        Header="Upstream proxy detour"
                                        Width="260"
                                        Style="{StaticResource DefTextBox}" />
                                </StackPanel>

                                <TextBox
                                    x:Name="FullConfigTemplateSettingsPageXrayTemplateTextBox"
                                    x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Xray.Template"
                                    Header="Xray config template (JSON)"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    FontFamily="Consolas"
                                    Height="320" />
                            </StackPanel>
                        </TabViewItem>

                        <TabViewItem Header="sing-box">
                            <StackPanel Spacing="12">
                                <ToggleSwitch
                                    x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Singbox.Enable"
                                    x:Name="FullConfigTemplateSettingsPageSingboxEnableToggle"
                                    Header="Enable template"
                                    MinWidth="0" />

                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <ToggleSwitch
                                        x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Singbox.AddProxyOnly"
                                        x:Name="FullConfigTemplateSettingsPageSingboxAddProxyOnlyToggle"
                                        Header="Add proxy protocol outbound only"
                                        MinWidth="0" />
                                    <TextBox
                                        x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Singbox.ProxyDetour"
                                        x:Name="FullConfigTemplateSettingsPageSingboxProxyDetourTextBox"
                                        Header="Upstream proxy detour"
                                        Width="260"
                                        Style="{StaticResource DefTextBox}" />
                                </StackPanel>

                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        Grid.Column="0"
                                        x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Singbox.Template"
                                        x:Name="FullConfigTemplateSettingsPageSingboxTemplateTextBox"
                                        Header="sing-box config template (JSON)"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                        FontFamily="Consolas"
                                        Height="320" />

                                    <TextBox
                                        Grid.Column="1"
                                        x:Uid="v2rayWinUI.Settings.FullConfigTemplate.Singbox.TunTemplate"
                                        x:Name="FullConfigTemplateSettingsPageSingboxTunTemplateTextBox"
                                        Header="sing-box TUN template (JSON)"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                        FontFamily="Consolas"
                                        Height="320" />
                                </Grid>
                            </StackPanel>
                        </TabViewItem>
                    </TabView>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button
                            x:Name="FullConfigTemplateSettingsPageSaveButton"
                            x:Uid="v2rayWinUI.Settings.FullConfigTemplate.SaveButton"
                            Content="Save"
                            Visibility="Collapsed"
                            Style="{StaticResource AccentButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </controls:TitleCard>
        </StackPanel>
    </ScrollViewer>
</Page>
