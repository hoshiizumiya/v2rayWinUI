<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="v2rayWinUI.Views.Settings.SettingsPages.GeneralSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:v2rayWinUI.Controls"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="12" Spacing="12">
            <controls:TitleCard Title="General">
                <StackPanel Spacing="12">
                    <Expander Header="Core" IsExpanded="True">
                        <StackPanel Padding="12" Spacing="12">
                            <StackPanel Spacing="4">
                                <TextBlock FontWeight="SemiBold" Text="Core Type" />
                                <ComboBox x:Name="cmbCoreType" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <CheckBox x:Name="chkLogEnabled" Content="Enable Logging" />
                            <CheckBox x:Name="chkMuxEnabled" Content="Enable Mux" />
                        </StackPanel>
                    </Expander>

                    <Expander Header="Inbound" IsExpanded="True">
                        <StackPanel Padding="12" Spacing="12">
                            <StackPanel Spacing="4">
                                <TextBlock FontWeight="SemiBold" Text="SOCKS Port" />
                                <TextBox x:Name="txtSocksPort" InputScope="Number" />
                            </StackPanel>

                            <StackPanel Spacing="4">
                                <TextBlock FontWeight="SemiBold" Text="HTTP Port" />
                                <TextBox x:Name="txtHttpPort" InputScope="Number" />
                            </StackPanel>

                            <CheckBox x:Name="chkAllowLANConn" Content="Allow LAN Connections" />
                        </StackPanel>
                    </Expander>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Spacing="8">
                        <Button x:Name="btnSave" Visibility="Collapsed" Content="Save" Style="{StaticResource AccentButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </controls:TitleCard>
        </StackPanel>
    </ScrollViewer>
</Page>
