<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="v2rayWinUI.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:v2rayWinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="12" Spacing="12">

            <controls:TitleCard Title="Overview">
                <Grid ColumnSpacing="12" RowSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <InfoBar
                        Title="System Proxy"
                        Grid.Column="0"
                        IsClosable="False"
                        IsOpen="True"
                        Message="Use the left bottom button to toggle."
                        Severity="Informational" />
                    <InfoBar
                        Title="Active Profile"
                        Grid.Column="1"
                        IsClosable="False"
                        IsOpen="True"
                        Message="Select a server and set as active."
                        Severity="Informational" />
                    <InfoBar
                        Title="Subscriptions"
                        Grid.Column="2"
                        IsClosable="False"
                        IsOpen="True"
                        Message="Manage groups in Subscription page."
                        Severity="Informational" />
                </Grid>
            </controls:TitleCard>

            <controls:TitleCard Title="Quick Actions">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button
                        x:Name="btnGoServers"
                        Content="Servers"
                        Style="{StaticResource DefButton}" />
                    <Button
                        x:Name="btnGoSubs"
                        Content="Subscriptions"
                        Style="{StaticResource DefButton}" />
                    <Button
                        x:Name="btnGoLog"
                        Content="Log"
                        Style="{StaticResource DefButton}" />
                </StackPanel>
            </controls:TitleCard>

        </StackPanel>
    </ScrollViewer>
</UserControl>
