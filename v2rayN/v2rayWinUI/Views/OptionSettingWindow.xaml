<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="v2rayWinUI.Views.OptionSettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Options">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Options" 
                  Style="{StaticResource TitleTextBlockStyle}"
                  FontWeight="SemiBold"
                  Margin="0,0,0,20"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <!-- Core Settings -->
                <Expander Header="Core Settings" IsExpanded="True">
                    <StackPanel Spacing="12" Padding="12">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Core Type" FontWeight="SemiBold"/>
                            <ComboBox x:Name="cmbCoreType" HorizontalAlignment="Stretch" Style="{StaticResource DefComboBox}"/>
                        </StackPanel>
                        
                        <CheckBox x:Name="chkLogEnabled" Content="Enable Logging"/>
                        <CheckBox x:Name="chkMuxEnabled" Content="Enable Mux"/>
                    </StackPanel>
                </Expander>

                <!-- Inbound Settings -->
                <Expander Header="Inbound Settings">
                    <StackPanel Spacing="12" Padding="12">
                        <StackPanel Spacing="4">
                            <TextBlock Text="SOCKS Port" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtSocksPort" InputScope="Number" Style="{StaticResource DefTextBox}"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="4">
                            <TextBlock Text="HTTP Port" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtHttpPort" InputScope="Number" Style="{StaticResource DefTextBox}"/>
                        </StackPanel>
                        
                        <CheckBox x:Name="chkAllowLANConn" Content="Allow LAN Connections"/>
                    </StackPanel>
                </Expander>

                <!-- System Proxy -->
                <Expander Header="System Proxy" IsExpanded="True">
                    <StackPanel Spacing="12" Padding="12">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Mode" FontWeight="SemiBold" />
                            <ComboBox x:Name="cmbSysProxyType" Style="{StaticResource DefComboBox}" />
                        </StackPanel>

                        <CheckBox x:Name="chkNotProxyLocal" Content="Bypass local addresses (&lt;local&gt;)" />

                        <StackPanel Spacing="4">
                            <TextBlock Text="Exceptions" FontWeight="SemiBold" />
                            <TextBox x:Name="txtSysProxyExceptions" Style="{StaticResource DefTextBox}" PlaceholderText="e.g. 127.0.0.1;localhost;*.example.com" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="Advanced protocol" FontWeight="SemiBold" />
                            <TextBox x:Name="txtSysProxyAdvanced" Style="{StaticResource DefTextBox}" PlaceholderText="http={ip}:{http_port};socks={ip}:{socks_port}" />
                            <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" Text="Placeholders: {ip} {http_port} {socks_port}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="Custom PAC path" FontWeight="SemiBold" />
                            <TextBox x:Name="txtCustomPacPath" Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="Custom script path" FontWeight="SemiBold" />
                            <TextBox x:Name="txtCustomScriptPath" Style="{StaticResource DefTextBox}" />
                        </StackPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" 
                   Spacing="12" Padding="0,20,0,0">
            <Button x:Name="btnCancel" Content="Cancel" MinWidth="100" Style="{StaticResource DefButton}"/>
            <Button x:Name="btnSave" Content="Save" MinWidth="100" Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
