<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="v2rayWinUI.Views.OptionSettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Options"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            FontWeight="SemiBold"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Options" />

        <!--  Content  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <!--  Core Settings  -->
                <Expander Header="Core Settings" IsExpanded="True">
                    <StackPanel Padding="12" Spacing="12">
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Core Type" />
                            <ComboBox
                                x:Name="cmbCoreType"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DefComboBox}" />
                        </StackPanel>

                        <CheckBox x:Name="chkLogEnabled" Content="Enable Logging" />
                        <CheckBox x:Name="chkMuxEnabled" Content="Enable Mux" />
                    </StackPanel>
                </Expander>

                <!--  Inbound Settings  -->
                <Expander Header="Inbound Settings">
                    <StackPanel Padding="12" Spacing="12">
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="SOCKS Port" />
                            <TextBox
                                x:Name="txtSocksPort"
                                InputScope="Number"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="HTTP Port" />
                            <TextBox
                                x:Name="txtHttpPort"
                                InputScope="Number"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <CheckBox x:Name="chkAllowLANConn" Content="Allow LAN Connections" />
                    </StackPanel>
                </Expander>

                <!--  System Proxy  -->
                <Expander Header="System Proxy" IsExpanded="True">
                    <StackPanel Padding="12" Spacing="12">
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Mode" />
                            <ComboBox x:Name="cmbSysProxyType" Style="{StaticResource DefComboBox}" />
                        </StackPanel>

                        <CheckBox x:Name="chkNotProxyLocal" Content="Bypass local addresses (&lt;local&gt;)" />

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Exceptions" />
                            <TextBox
                                x:Name="txtSysProxyExceptions"
                                PlaceholderText="e.g. 127.0.0.1;localhost;*.example.com"
                                Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Advanced protocol" />
                            <TextBox
                                x:Name="txtSysProxyAdvanced"
                                PlaceholderText="http={ip}:{http_port};socks={ip}:{socks_port}"
                                Style="{StaticResource DefTextBox}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Placeholders: {ip} {http_port} {socks_port}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Custom PAC path" />
                            <TextBox x:Name="txtCustomPacPath" Style="{StaticResource DefTextBox}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="SemiBold" Text="Custom script path" />
                            <TextBox x:Name="txtCustomScriptPath" Style="{StaticResource DefTextBox}" />
                        </StackPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!--  Footer  -->
        <StackPanel
            Grid.Row="2"
            Padding="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="12">
            <Button
                x:Name="btnCancel"
                MinWidth="100"
                Content="Cancel"
                Style="{StaticResource DefButton}" />
            <Button
                x:Name="btnSave"
                MinWidth="100"
                Content="Save"
                Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
